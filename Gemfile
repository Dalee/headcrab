source 'https://rubygems.org'

gem 'rails', '4.2.8'

# database
gem 'pg', '~> 0.15'

# webserver
gem 'puma'

# frontend
gem 'coffee-rails', '~> 4.1.0'
gem 'execjs', platforms: :ruby
gem 'jbuilder', '~> 2.0'
gem 'jquery-rails'
gem 'sass-rails', '~> 5.0'
gem 'slim'
gem 'slim-rails'
gem 'therubyracer', platforms: :ruby
gem 'turbolinks'
gem 'uglifier', '>= 1.3.0'

gem 'sdoc', '~> 0.4.0', group: :doc

# serializer for models
gem 'active_model_serializers', '~> 0.10.0'

# Selects
gem 'chosen-rails'

# decorator (view model)
gem 'draper'

# rails internalization
gem 'rails-i18n', '~> 4.0.0'

# search in admin panel
gem 'ransack'

# React
gem 'react-rails'

# pagination
gem 'kaminari'

# phone parsing and formatting
gem 'phonelib'

# for seeding initial data
gem 'faker'
gem 'seedbank'

# admin panel layout builder (Twitter Bootstrap)
gem 'bootstrap-sass'
gem 'bootstrap-sass-extras'

group :development, :test do
  gem 'awesome_print'
  gem 'byebug'
  gem 'pry'
  gem 'rubocop', require: false
end

group :development do
  gem 'html2slim'
  gem 'web-console', '~> 2.0'
end

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'factory_girl_rails'
  gem 'poltergeist'
  gem 'rspec-rails'
  gem 'shoulda-matchers', '~> 3.1'
  gem 'simplecov'
end

# Windows does not include zoneinfo files, so bundle the tzinfo-data gem
gem 'tzinfo-data', platforms: %i[mingw mswin x64_mingw jruby]
